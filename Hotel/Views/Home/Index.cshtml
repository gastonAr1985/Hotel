@{
    ViewData["Title"] = "Hotel ORT";
}

<div class="text-center">
    <h1 class="display-2" style="font-family:'Edwardian Script ITC', Tahoma, Geneva, Verdana, sans-serif">Bienvenidos</h1>
    <h6  style="font-family:'Harlow'">Un hotel, una comunidad.</h6>
</div>

<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="1" class="active"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="2" class="active"></li>
    </ol>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img class="d-block w-100" src="~/imagenes/hotel/hotelort3.jpg" alt="First slide">



        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="~/imagenes/hotel/hotelort2.jpg" alt="Second slide">
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="~/imagenes/hotel/hotelort1.jpg" alt="Third slide">
        </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
