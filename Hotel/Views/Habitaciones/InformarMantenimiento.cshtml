@model Hotel.Models.Habitacion
@{ List<TipoMantenimiento> lista = (List<TipoMantenimiento>)ViewData["tipos"]; }

@{
    ViewData["Title"] = "Informar Mantenimiento";
}


<h4>informe Mantenimiento</h4>

<div class="row">
    <div class="col-md-4">
        <form asp-action="InformarMantenimiento">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Id" class="control-label"></label>
                <select asp-for="Id" class="form-control" asp-items="@ViewBag.habitaciones">
                    <option>Selecione una Habitacion</option>
                </select>
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TipoMantenimiento" class="control-label"></label>
                <select asp-for="TipoMantenimiento" class="form-control">

                    @foreach (TipoMantenimiento tipo in lista)
                    {
                        <option>@tipo</option>
                    }

                </select>
                <span asp-validation-for="TipoMantenimiento" class="text-danger"></span>
                <div class="form-group">
                    <input type="submit" value="Informar" class="btn btn-primary" />
                </div>
                </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
